<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
  <ui:style>
    /* Add CSS here. See the GWT docs on UI Binder for more details */
    .important {
    	font-weight: bold;
    }
  </ui:style>
  <g:HTMLPanel>
    <g:Grid>
    	<g:row>
    		<g:customCell>
    			<g:Label text="JSON Stream für den Import:"/>
    		</g:customCell>
    	</g:row>
    	<g:row>
    		<g:customCell>
    			<g:TextArea visibleLines="4" characterWidth="60" ui:field="inputArea"/>
    		</g:customCell>
    	</g:row>
    	<g:row>
    		<g:customCell>
    			<g:HorizontalPanel>
    				<g:Label text="Alle Woertli löschen der Unité:" horizontalAlignment="ALIGN_LEFT"/>
    				<g:TextBox visibleLength="3" ui:field="uniteToDelete"/>
    			</g:HorizontalPanel>
    		</g:customCell>
    	</g:row>
    	<g:row>
    		<g:customCell>
    			<g:HorizontalPanel>
    				<g:Button ui:field="btnUpload" text="Import" />
    				<g:Button ui:field="btnDelete" text="Löschen"/>
    				<g:Button ui:field="btnBack" text="zurück" />
    			</g:HorizontalPanel>
    		</g:customCell>
    	</g:row>
    </g:Grid>
  </g:HTMLPanel>
</ui:UiBinder> 